				int cont=0;
				 
				 do 
				 	{
					 	int c;
					 	// cridar la funcio de hash
					 	c = HashFuntion(aux3.elementAt(cont), dimT);	// tenir la clau

					 	// aqui caldria comprovar el factor de carrega i mirar si cal actualizarlo!
					 	System.out.println(c);
					 	
				 	nT.elementAt(c).addElement(aux3.elementAt(cont), aux2.elementAt(cont));
					cont++;
				 
				 	}
				 while(cont!=numU); 
		
		
		
	/*			
